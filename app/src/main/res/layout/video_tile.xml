<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/video_tile_margin_top_bottom"
        android:layout_marginBottom="@dimen/video_tile_margin_top_bottom"
        android:paddingTop="@dimen/video_tile_padding_top_bottom"
        android:paddingBottom="@dimen/video_tile_padding_top_bottom"
        android:paddingLeft="@dimen/video_tile_padding_left_right"
        android:paddingRight="@dimen/video_tile_padding_left_right">
        <ImageView
            android:id="@+id/video_thumb"
            android:adjustViewBounds="true"
            android:layout_marginRight="@dimen/video_icon_margin_right"
            android:layout_width="@dimen/video_icon_width_height"
            android:layout_height="@dimen/video_icon_width_height"
            android:src="@drawable/ic_video_accent"/>
        <TextView
            android:id="@+id/tv_video_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"/>

    </LinearLayout>

    <View style="@style/DividerSolid"/>
    </LinearLayout>